/* 转盘 */
.canvas-container ul,
.canvas-container li {
  margin: 0;
  padding: 0;
  list-style: none;
}

.canvas-container {
  margin: 0 auto;
  position: relative;
  width: 700rpx;
  height: 700rpx;
  border-radius: 50%;
  /*border: 2px solid #E44025;*/
  box-shadow: 0 4rpx 6rpx #333,
    0 0 4rpx #000;
  border: 20rpx solid red;
}

.canvas-content {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  display: block;
  width: 700rpx;
  height: 700rpx;
  border-radius: inherit;
  background-clip: padding-box;
  background-color: #ffcb3f;
}

.canvas-element {
  position: relative;
  z-index: 1;
  width: inherit;
  height: inherit;
  border-radius: 50%;
}

.canvas-list {
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 9999;
}

.canvas-item {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  color: #e4370e;
  font-weight: bold;
  text-shadow: 0 2rpx 2rpx rgba(255, 255, 255, .6);
}

.canvas-item-text {
  position: relative;
  display: block;
  padding-top: 40rpx;
  /* width: 50px; */
  margin: 0 auto;
  text-align: center;
  -webkit-transform-origin: 50% 350rpx;
  transform-origin: 50% 350rpx;
}

.canvas-item-pic {
  position: relative;
  display: block;
  padding-top: 120rpx;
  /* width: 50px; */
  margin: 0 auto;
  text-align: center;
  -webkit-transform-origin: 50% 350rpx;
  transform-origin: 50% 350rpx;
  /* background: #E44025; */
}

.canvas-item-img {
  width: 80rpx;
  height: 80rpx;
}

/* 分隔线 */
.canvas-line {
  position: absolute;
  left: 0;
  top: 0;
  width: inherit;
  height: inherit;
  z-index: 99;
}

.canvas-litem {
  position: absolute;
  left: 350rpx;
  top: 0;
  width: 2rpx;
  height: 350rpx;
  background-color: rgba(228, 55, 14, .4);
  overflow: hidden;
  -webkit-transform-origin: 50% 350rpx;
  transform-origin: 50% 350rpx;
}


.canvas-btn {
  position: absolute;
  left: 260rpx;
  top: 240rpx;
  z-index: 80;
  width: 180rpx;
  height: 220rpx;
  /* border-radius: 50%; */
  color: #F4E9CC;
  /* background-color: #E44025; */
  line-height: 160rpx;
  text-align: center;
  font-size: 40rpx;
  /* text-shadow: 0 -1px 1px rgba(0, 0, 0, .6); */
  /* box-shadow: 0 3px 5px rgba(0, 0, 0, .6); */
  text-decoration: none;
}

