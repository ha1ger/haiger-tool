/* miniprogram/pages/index.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

.back-img {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
}

text {
  margin-top: 30rpx;
  font-size: 40rpx;
  color: #f0831e;
}

.btn-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  padding: 0 80rpx;
  box-sizing: border-box;
}

button {
  width: 200rpx;
  height: 200rpx;
  background: none;
  padding: 0;
  line-height: 1;
  border: none;
  position: relative;
  margin-top: 20rpx;
}

button::after {
  border: none;
  border-radius: 0;
}

image {
  width: 200rpx;
  height: 200rpx;
}

.open-data {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}